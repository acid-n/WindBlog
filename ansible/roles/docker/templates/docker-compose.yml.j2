version: '3.8'
services:
  db:
    image: postgres:15
    environment:
      POSTGRES_DB: blog
      POSTGRES_USER: blog
      POSTGRES_PASSWORD: {{ postgres_password }}
    volumes:
      - postgres_data:/var/lib/postgresql/data
    restart: always
  redis:
    image: redis:7
    command: ["redis-server", "--requirepass", "{{ redis_password }}"]
    volumes:
      - redis_data:/data
    restart: always
  backend:
    build: ../backend
    env_file: ../.env
    depends_on:
      - db
      - redis
    restart: always
  frontend:
    build: ../frontend
    env_file: ../.env
    depends_on:
      - backend
    restart: always
volumes:
  postgres_data:
  redis_data:
