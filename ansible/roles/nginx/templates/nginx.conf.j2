server {
    listen 80;
    server_name YOUR_DOMAIN_OR_IP;
    location /static/ {
        alias /home/deploy/app/static/;
    }
    location /media/ {
        alias /home/deploy/app/media/;
    }
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
