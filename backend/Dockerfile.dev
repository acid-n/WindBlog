# DEV Dockerfile for Django backend
FROM python:3.11-slim
WORKDIR /app

# Системные зависимости для разработки и тестирования
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

# Копирование файлов зависимостей
COPY requirements.txt .
COPY requirements-test.txt .

# Установка всех зависимостей включая тестовые
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir -r requirements-test.txt \
    && pip install --no-cache-dir factory_boy django-ratelimit==3.0.0

# Проверка установки factory_boy
RUN pip list | grep factory

# Копирование кода проекта
COPY . .

# Создание директории для логов
RUN mkdir -p /app/logs

EXPOSE 8000
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
